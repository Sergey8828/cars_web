@model Cars.Models.BrandTbl

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*<h1>Hello! You have entered the best website about cars! <br />Sergey's Cars Co was set up on Thursday the 8th of June 2022. Our current partial address is Claremorris, and the company status is Dissolved with the company closing on Sunday the 26th of April 2022. The company's current directors have been the director of 2 other Irish companies between them; 1 of which is now closed. Sergey's has 2 shareholders.</h1>*@

@*<h2>Create</h2>*@


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<body style="background-image: url(/Image/cars.jpg); background-size: cover; background-repeat: no-repeat;">
    <div  class="form-horizontal">
        <h4 style="margin-left:250px; font-size:24px; color:navy;">Here You can create a new Brand!</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div style="font-size:20px" class="form-group">
            @Html.LabelFor(model => model.BrandName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
</body>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
